{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./lib"
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
